generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pengguna {
  id         Int      @id @default(autoincrement())
  nama       String
  nip        String   
  password   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
model Staff {
  id         Int      @id @default(autoincrement()) 
  id_staff   Int      @unique
  nama_LkG    String
  nip        String   
  jenis_Kelamin  JenisKelamin
  alamat     String
  no_Telp    String
  email      String
  kategoriPROFESI  kategoriPROFESI
  kategoriUNITKERJA  kategoriUNITKERJA
  jabatan_spesfik   String
  status_kepegawaian kategoriSTATUSKEPEGAWAIAN
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

}
model staff_medis {
  id         Int      @id @default(autoincrement()) 
  id_staff   Int      @unique
  nip        String   
  sip        String
}

