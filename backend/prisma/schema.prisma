generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id         Int      @id @default(autoincrement())
  nama       String
  nip        String   
  password   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
model Staff {
  id         Int      @id @default(autoincrement()) 
  idStaff   Int      @unique
  namaLkG    String
  nip        String   
  jenisKelamin  jenisKelamin
  alamat     String
  noTelp    String
  email      String
  kategoriProfesi  kategoriProfesi
  kategoriUnitkerja  kategoriUnitkerja
  jabatanSpesfik   String
  statusKepegawaian kategoriStatuskepegawaian
  peran       peran
  sip        String?
  sipUrl     String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model KinerjaStaff {
  id         Int      @id @default(autoincrement())
  targetTB  String
  targetKP String
  realisasiTB  String
  realisasiKP String
  capaianTB  String
  capaianKP String
  integritas  String
  disiplin   String
  skpTKP  String
  skpRealisasi  String
  skpPredikat  String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
} 

model Diklat {
  id         Int      @id @default(autoincrement())
  namaKegiatan String
  tanggal String
  jenis String
  durasi String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
model Direktori


