generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id         Int      @id @default(autoincrement())
  nama       String
  email      String   @unique
  password   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
model Staff {
  id         Int      @id @default(autoincrement()) 
  kinerjaStaff KinerjaStaff?
  namaLkG    String
  nip        String   
  jenisKelamin  jenisKelamin
  alamat     String
  noTelp    String
  email      String
  kategoriProfesi  kategoriProfesi
  kategoriUnitKerja  kategoriUnitKerja
  jabatanSpesifik   String
  statusKepegawaian kategoriStatuskepegawaian
  peran       peran
  sipUrl     String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  deletedAt DateTime?
}

model KinerjaStaff {
  id         Int      @id @default(autoincrement())
  staff Staff @relation(fields: [id], references: [id])
  diklat Diklat[]
  targetTimePasienBaru  String
  targetKepuasanPasien String
  realisasiTimePasienBaru  String
  realisasiKepuasanPasien String
  capaianTimePasienBaru  String
  capaianKepuasanPasien String
  integritas  String
  disiplin   String
  skpTKP  String
  skpRealisasi  String
  skpPredikat  String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
} 

model Diklat {
  id         Int      @id @default(autoincrement())
  staffId Int
  kinerjaStaff KinerjaStaff @relation(fields: [staffId], references: [id])
  namaKegiatan String
  tanggal String
  jenis String
  durasi String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

